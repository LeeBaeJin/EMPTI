<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper	namespace="com.hein.empti.authorities.mapper.AuthoritiesMapper">
	<!-- 권한 단건조회 -->
	<select id="getAuthorities" parameterType="com.hein.empti.authorities.AuthoritiesVO"
		resultType="com.hein.empti.authorities.AuthoritiesVO">
		SELECT *
		FROM Authorities
		WHERE dept_id = #{dept_id}
	</select>
	
	<select id="getAuthMenuList" parameterType="com.hein.empti.authorities.AuthoritiesVO"
		resultType="com.hein.empti.authorities.AuthoritiesVO">
		SELECT a.dept_id, a.menu_no, m.menu_name, m.menu_addr
		FROM menu m JOIN authorities a
		ON (m.menu_no = a.menu_no)
	</select>

	<!-- 권한 전체조회 -->
	<select id="getAuthoritiesList" resultType="com.hein.empti.authorities.AuthoritiesVO">
		SELECT *
		FROM Authorities
	</select>
	
	
</mapper>